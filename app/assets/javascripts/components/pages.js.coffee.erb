{div, h1, p, span, a, small, img, h2, script} = React.DOM

@Pages = React.createClass

  displayName: 'Page'

  componentWillMount: ->
    scripta = document.createElement("script")
    # chilli = 'assets/chilli.png'
    chilli = "<%= asset_path('chilli.png') %>"
    scripta.text = "function initMap() {
              var myLatLng = {lat: 55.9438671, lng: -3.2041671};
              var mapDiv = document.getElementById('map');
              var image = {
                url: '" + chilli + "',
                scaledSize: new google.maps.Size(30, 66),
                origin: new google.maps.Point(0, 0),
                anchor: new google.maps.Point(0, 66)
              };
              var map = new google.maps.Map(mapDiv, {
                  center: myLatLng,
                  zoom: 15
              });
              var marker = new google.maps.Marker({
                position: myLatLng,
                map: map,
                title: 'Central Hall',
                icon: image
              });
            }"
    document.body.appendChild(scripta);

    script = document.createElement("script")
    script.async = true
    script.defer = true
    script.src = 'https://maps.googleapis.com/maps/api/js?key=AIzaSyB0bvQXFr2cnnV7NYyksoiLkTnEptC_IQw&callback=initMap'
    document.body.appendChild(script);


  render: ->
    div null,
      div className: 'page main',
        div className: 'content',
          h1 className: 'title',
            p className: 'name pad-bottom', 'Richard Bell & Stephanie Mann'
            p null, 'are getting married!'
        img className:'chilli', src: "<%= asset_path('chilli.png') %>"
        img className:'flower', src: "<%= asset_path('flower.png') %>"
        img className:'rock', src: "<%= asset_path('rock.png') %>"
      div className: 'page summary',
        div className: 'content',
          p null, '... on Saturday 22nd October 2016'
          p className:'pad-bottom', 'at Central Hall, Edinburgh'
          div className: 'emphasise',
            p className:'pad-bottom', 'Please let us know if you can make it.'
          p null, 'Email ',
            a href:'mailto:"thebellstobe@gmail.com"', 'thebellstobe@gmail.com'
          p null, ' by 22nd September.'
        img className:'lemon', src: "<%= asset_path('lemon.png') %>"
        img className:'grapefruit', src: "<%= asset_path('grapefruit.png') %>"
      div className: 'page details',
        div className: 'content',
          div className: 'timings',
            p null,
              span className: 'pull-left', 'Ceremony begins:'
              span className: 'pull-right', ' 1:30pm'
            p null,
              span className: 'pull-left', 'Boogie woogie kicks off:'
              span className: 'pull-right', ' 7.45pm'
            p null,
              span className: 'pull-left', 'Carriages:'
              span className: 'pull-right', ' 11.00pm'

          div className: 'address-and-map',
            div className: 'address',
              p null, 'Central Hall'
              p null, '2 W Tollcross,'
              p null, 'Edinburgh'
              p null, 'EH3 9BP'
            div id:'map'
        img className:'blob', src: "<%= asset_path('blob.png') %>"
      div className: 'page giftlist',
        div className: 'content',
          p className:'pad-bottom' , "The best gift you can give us is to be with us on the day. However, if you really, really want to get us something, we've put together a list of things which will help us set up home."
          p className:'pad-bottom', "Find it at John Lewis with gift list number: 677417."
          p className:'small', "P.S Our new flat is super tiny and we want to avoid getting 500 champagne flutes, so we'd appreciate if you stick to the list!"
        img className:'plant', src: "<%= asset_path('plant.png') %>"
        img className:'banana', src: "<%= asset_path('banana.png') %>"
      div className: 'page transport',
        div className: 'content',
          p null, "Central Hall is a short walk from ",
            a href:'https://www.google.co.uk/maps/place/Haymarket/@55.945597,-3.2204723,17z/data=!3m1!4b1!4m5!3m4!1s0x4887c7a5bdd4b393:0x6e7360c44f6f7caa!8m2!3d55.945597!4d-3.2182783', 'Haymarket Station'
            span null, " or"
          p className:'pad-bottom', "a 15 minute bus ride from ",
            a href:'https://www.google.co.uk/maps/place/Waverley+Railway+Station,+Edinburgh+EH1+1BB/@55.9519331,-3.1917618,17z/data=!3m1!4b1!4m5!3m4!1s0x4887c78fbef1f32b:0x7161189432e275bc!8m2!3d55.9519331!4d-3.1895678', 'Waverley Station'
            span null, '.'
          p className:'pad-bottom', "There's no free parking on site, but there's plenty of parking nearby. "
          p className:'pad-bottom',
            a href:'http://www.centralvenues.org/wp-content/uploads/2013/11/Central-Hall-how-to-find-us-access-details.pdf', 'Find out more here.'
          p null, "Can't wait to see you there!"
        img className:'cracker', src: "<%= asset_path('cracker.png') %>"
